{
  "name": "agent-cli",
  "version": "1.1.0",
  "description": "CLI tool for pulling agent skills and instructions from a central repository into any project.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "agent": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "node --import tsx --test src/__tests__/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "agent",
    "skills",
    "instructions",
    "cli",
    "copilot",
    "cursor",
    "development"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0"
  }
}
